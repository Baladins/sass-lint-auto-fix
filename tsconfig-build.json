{
  "compilerOptions": {
    "outDir": "./dist/",
    "skipLibCheck": true,
    "target": "es6",
    "sourceMap": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "allowJs": false,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "paths": {
      "@src*": ["src*"],
      "@test*": ["test*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*", "index.ts"],
  "inlineSources": true,
  "inlineSourceMap": true,
  "exclude": [
    "node_modules",
    "dist"
  ]
}
