{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": false,
        "module": "commonjs",
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
          "node_modules/@types"
        ],
        "lib": [ "es2015" ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "types": [
      "node"
    ]
}
